<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>com.minsait.payments.hazelcast-tools</groupId>
	<artifactId>hazelcast-tools-parent</artifactId>
	<version>1.0.0</version>
	<packaging>pom</packaging>
	<name>hazelcast-tools-parent</name>
	<description>Hazelcast Tools project parent</description>
	
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.2.4.RELEASE</version>
	</parent>
	

	<properties>
		<maven-jar-plugin.version>3.1.1</maven-jar-plugin.version>
		<spring-boot.version>2.2.4.RELEASE</spring-boot.version>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<hazelcast-kubernetes.version>1.3.1</hazelcast-kubernetes.version>
		<springfox-swagger2.version>2.9.2</springfox-swagger2.version>
	</properties>
	
		
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-dependencies</artifactId>
				<version>${spring-boot.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-starter</artifactId>
				<version>${spring-boot.version}</version>
			</dependency>
			<dependency>
				<groupId>io.springfox</groupId>
				<artifactId>springfox-swagger2</artifactId>
				<version>${springfox-swagger2.version}</version>
			</dependency>
			<dependency>
				<groupId>io.springfox</groupId>
				<artifactId>springfox-swagger-ui</artifactId>
				<version>${springfox-swagger2.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<profiles>
		<profile>
			<id>all</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>datagrid-server</module>
				<module>datagrid-manager</module>
			</modules>
		</profile>
		<profile>
			<id>kubernetes</id>
			<dependencies>
				<dependency>
					<groupId>com.hazelcast</groupId>
					<artifactId>hazelcast-kubernetes</artifactId>
					<version>${hazelcast-kubernetes.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>deploy</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<modules>
				<module>datagrid-client</module>
			</modules>
		</profile>
	</profiles>
	
	<distributionManagement>
   		<snapshotRepository>
      		<id>payments-nexus-snapshots</id>
      		<url>http://mps.labs.devops/nexus/repository/maven-snapshots/</url>
   		</snapshotRepository>
   		<repository>
      		<id>payments-nexus-releases</id>
      		<url>http://mps.labs.devops/nexus/repository/maven-releases/</url>
   		</repository>
	</distributionManagement>
	
</project>
