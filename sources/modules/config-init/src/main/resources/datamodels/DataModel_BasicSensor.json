{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "DataModel BasicSensor Schema",
    "type": "object",
    "required": [
        "BasicSensor"
    ],
    "properties": {
        "BasicSensor": {
            "type": "string",
            "$ref": "#/datos"
        }
    },
    "datos": {
        "description": "Properties for DataModel BasicSensor",
        "type": "object",
        "required": [
            "timestamp",
            "assetId",
            "measure"
        ],
        "properties": {
            "timestamp": {
                "type": "object",
                "required": [
                    "$date"
                ],
                "properties": {
                    "$date": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "additionalProperties": false
            },
            "assetId": {
                "type": "string"
            },
            "measure": {
                "type": "number"
            },
            "unit": {
                "type": "string"
            },
            "groupId": {
                "type": "string"
            }
        }
    }
}