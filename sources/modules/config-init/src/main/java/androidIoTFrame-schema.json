{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "androidIoTFrame",
    "type": "object",
    "required": [
        "androidIoTFrame"
    ],
    "properties": {
        "androidIoTFrame": {
            "type": "string",
            "$ref": "#/datos"
        }
    },
    "datos": {
        "description": "Info androidIoTFrame",
        "type": "object",
        "required": [
            "geometry",
            "email",
            "accelX",
            "accelY",
            "accelZ",
            "event"
        ],
        "properties": {
            "geometry": {
                "type": "object",
                "required": [
                    "coordinates",
                    "type"
                ],
                "properties": {
                    "coordinates": {
                        "type": "array",
                        "items": [
                            {
                                "type": "number",
                                "maximum": 180,
                                "minimum": -180
                            },
                            {
                                "type": "number",
                                "maximum": 90,
                                "minimum": -90
                            }
                        ],
                        "minItems": 2,
                        "maxItems": 2
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "Point"
                        ]
                    }
                },
                "additionalProperties": false
            },
            "email": {
                "type": "string"
            },
            "accelX": {
                "type": "number"
            },
            "accelY": {
                "type": "number"
            },
            "accelZ": {
                "type": "number"
            },
            "event": {
                "type": "boolean"
            }
        },
        "additionalProperties": false
    },
    "description": "Stores remote frames from Android devices"
}
