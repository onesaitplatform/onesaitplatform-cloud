<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cv"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left">

                    <TextView
                        android:id="@+id/height_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_margin"
                        android:textColor="@color/colorAccent"
                        android:text="Height (cm): "
                        android:fontFamily="serif-monospace"/>

                    <TextView
                        android:id="@+id/height_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_margin="@dimen/card_margin"
                        android:fontFamily="serif-monospace"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left">

                    <TextView
                        android:id="@+id/weight_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_margin"
                        android:textColor="@color/colorAccent"
                        android:text="Weight (kg): "
                        android:fontFamily="serif-monospace"/>
                    <TextView
                        android:id="@+id/weight_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_margin"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="serif-monospace"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left">

                    <TextView
                        android:id="@+id/sys_pressure_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_margin"
                        android:textColor="@color/colorAccent"
                        android:text="SysPressure (mmHg): "
                        android:fontFamily="serif-monospace"/>

                    <TextView
                        android:id="@+id/sys_pressure_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_margin="@dimen/card_margin"
                        android:fontFamily="serif-monospace"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left">

                    <TextView
                        android:id="@+id/dia_pressure_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_margin="@dimen/card_margin"
                        android:text="DiaPressure (mmHg): "
                        android:fontFamily="serif-monospace"/>

                    <TextView
                        android:id="@+id/dia_pressure_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_margin"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="serif-monospace"/>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left">

                    <TextView
                        android:id="@+id/comments_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_margin"
                        android:textColor="@color/colorAccent"
                        android:text="Comments: "
                        android:fontFamily="serif-monospace"/>

                    <TextView
                        android:id="@+id/comments_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_margin"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="serif-monospace"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">

                    <TextView
                        android:id="@+id/timestamp_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_margin"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="monospace"/>

                </LinearLayout>




            </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
